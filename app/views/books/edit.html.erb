<!DOCTYPE html>
<html>
  <head></head>
  <body>
    <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit "Update Book" %>
      </div>
    <% end %>
    <%= link_to "Show", "/books/:id" %>
    |
    <%= link_to "Back", "/books" %>
  </body>
</html>